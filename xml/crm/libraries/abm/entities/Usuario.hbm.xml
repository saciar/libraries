<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="crm.libraries.abm.entities.Usuario" table="MST_USUARIOS">
        <id name="codigo" column="us_codusuario"></id>
        <property name="loginName" column="login_name"/>
        <property name="password" column="password" />
        <property name="apellidoYNombre" column="apynom" />
        <property name="perfil" column="us_perfil" />
        <property name="email" column="email" />
        <property name="activo" column="activo" />
		<property name="limite_descuento" column="limite_dto" />
		<property name="foto" column="foto" />

    </class>

</hibernate-mapping>